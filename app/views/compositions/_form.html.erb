

<%= simple_form_for(@composition) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: "Type here..." %>
    <%= f.input :instruments, placeholder: "Trumpet, Djembe and Accordian" %>
    <%= f.input :description, placeholder: "Bach meets Afrobeat ... with 7th chords!" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create", class: "btn btn-primary" %>
  </div>
<% end %>
